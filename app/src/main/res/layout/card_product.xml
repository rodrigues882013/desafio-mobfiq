<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_margin"
        card_view:elevation="3dp"
        card_view:cardBackgroundColor="@color/white"
        android:layout_gravity="center"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="4dp">

        <RelativeLayout
            android:padding="2dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/product_image"
                android:layout_width="150dp"
                android:layout_height="200dp" />

            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="@dimen/common_20"

                android:layout_below="@id/product_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_10_sp"
                    android:text="dasdasdasda"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_list_price"
                    android:textColor="@color/black"
                    android:text="asdasddasdasd"
                    android:textSize="@dimen/common_10_sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_price"
                    android:text="asdasddasdasd"
                    android:textColor="@color/font_green"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_price_installment"
                    android:textColor="@color/font_green"
                    android:text="asdasddasdasd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>